
.container {
  padding-left: 20rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  box-sizing: border-box;
}

.box-list {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  margin: 5px;
  width: 100%;
}

.box-item {
  /* box-shadow: 0 0 100px gray; */
  font-size: 25rpx;
  display: flex;
  width: 100%;
  border-bottom: 1rpx solid rgba(112, 112, 112, 0.2);
  margin-bottom: 20rpx;
}

.box-item .img {
  display: flex;
  height: 300rpx;
}

.box-body {
  display: flex;
  flex-direction: column;
}

.box-body .price {
  font-size: 30rpx;
  display: flex;
  color: brown;
}
